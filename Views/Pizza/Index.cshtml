
@model List<Pizza>

<a class="btn btn-primary" href="@Url.Action("Create")">Crea nuova pizza</a>

<table class="table container">
    @if(Model.Count >0){
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Foto</th>
                <th scope="col">Prezzo</th>
            </tr>
        </thead>
        <tbody>     

            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td>@pizza.Id</td>
                    <td>@pizza.Nome</td>
                    <td>@pizza.Descrizione</td>
                    <td><img src="@pizza.Image" /></td>
                    <td>@pizza.Prezzo &euro;</td>
                    <td><a href="@Url.Action("Details", "Pizza", new {Id= pizza.Id})">Dettagli</a></td>
                </tr> 
            }

    </tbody>
    }
    else
    {
         <tr>
             <td><h2>Non ci sono pizze.</h2></td>
         </tr>
    }
</table>

