
@model Pizza;

<form asp-controller="Pizza" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Nome">Nome pizza</label>
        <input asp-for="Nome" type="text" class="form-control"  placeholder="Nome pizza">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descrizione">Descrizione pizza</label>
        <input asp-for="Descrizione" type="text" class="form-control" placeholder="Descrizione pizza">
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Image">Immagine pizza</label>
        <input asp-for="Image" type="text" class="form-control" placeholder="url immagine pizza">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Prezzo">Prezzo pizza</label>
        <input asp-for="Prezzo" type="text" class="form-control" placeholder="Prezzo pizza">
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
