
@model Pizza;

<form asp-controller="Post" asp-action="Create" method="post">
    @Html.AntiForgeryToken();
    <div class="form-group">
        <label for="exampleInputEmail1">Nome pizza</label>
        <input asp-for="Nome" type="email" class="form-control"  placeholder="Nome pizza">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Descrizione pizza</label>
        <input asp-for="Descrizione" type="email" class="form-control" placeholder="Descrizione pizza">
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
