
@model Pizza

<div class="card m-auto" style="width: 18rem;">
    <img src="@Model.Image" />
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.Descrizione</p>
        <a class="btn btn-outline-primary" asp-area="" asp-controller="Pizza" asp-action="Index">Indietro</a>
    </div>
</div>

